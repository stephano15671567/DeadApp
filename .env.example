# Backend environment example for development
# Copy this file to .env and adjust values before running

# Port where the backend will listen (default 3002 to avoid conflict with Next dev server)
PORT=3002

# MongoDB connection string (example for local mongo)
MONGO_URI=mongodb://localhost:27017/mi_testamento_db

# Encryption key (use a secure random string in production)
ENCRYPTION_KEY=clave-de-prueba-para-dev

# Enable development-only endpoints (set to true only in local dev)
ENABLE_DEV_ENDPOINTS=true
DEV_ENDPOINTS_SECRET=devsecret123
